<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardioGuardMobile.Monitor"
             Title="Monitoring">
    <VerticalStackLayout>
        <Entry 
            x:Name="UserIDEntry"
            Placeholder="What is your ID?"
            HorizontalOptions="Center" />

        <Button
            x:Name="IDBtn"
            Text="Save ID"
            Clicked="IDBtn_Clicked"
            HorizontalOptions="Center"
            />

        <Label 
               Text="BPM Test"
               x:Name="BPM"
               FontSize="18"
               HorizontalOptions="Center"/>

        <Entry x:Name="TestEntry" 
               Keyboard="Numeric"
               HorizontalOptions="Center"/>

        <Button
            x:Name="TestBtn"
            Text="Validate"
            Clicked="OnBtnClicked"
            HorizontalOptions="Center"
            />

    </VerticalStackLayout>
</ContentPage>
    